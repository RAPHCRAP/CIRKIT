#!/usr/bin/env sh
# Lightweight Gradle shim: use system gradle if available, otherwise fallback to build-and-run.ps1
if command -v gradle >/dev/null 2>&1; then
  gradle "$@"
else
  if command -v pwsh >/dev/null 2>&1; then
    pwsh -NoProfile -ExecutionPolicy Bypass -File "$(dirname "$0")/build-and-run.ps1" "$@"
  elif command -v powershell >/dev/null 2>&1; then
    powershell -NoProfile -ExecutionPolicy Bypass -File "$(dirname "$0")/build-and-run.ps1" "$@"
  else
    echo "Gradle not found and PowerShell not found to run fallback build-and-run.ps1"
    exit 1
  fi
fi
